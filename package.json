{
  "name": "clms-frontend",
  "description": "Volto Frontend for CLMS site",
  "license": "MIT",
  "version": "2.50.0",
  "private": true,
  "workspaces": [
    "src/addons/volto-arcgis-block",
    "src/addons/volto-clms-theme",
    "src/addons/volto-clms-utils"
  ],
  "addons": [
    "@eeacms/volto-eea-kitkat",
    "@eeacms/volto-clms-theme",
    "@eeacms/volto-arcgis-block",
    "@eeacms/volto-block-style",
    "@eeacms/volto-widget-geolocation",
    "@eeacms/volto-sentry-rancher-config"
  ],
  "scripts": {
    "start": "razzle start",
    "postinstall": "yarn omelette && yarn patches",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "patches": "/bin/bash patches/patchit.sh > /dev/null 2>&1 ||true",
    "build": "razzle build --noninteractive",
    "start:prod": "NODE_ENV=production node build/server.js",
    "develop:npx": "npx -p mrs-developer missdev --config=jsconfig.json --output=develop",
    "develop": "missdev --config=jsconfig.json --output=addons --fetch-https",
    "update": "./scripts/update.sh",
    "test": "./node_modules/jest/bin/jest.js --env=jsdom --passWithNoTests src/addons --verbose",
    "i18n": "rm -rf build/messages && NODE_ENV=production i18n",
    "cypress:run": "./node_modules/cypress/bin/cypress run",
    "cypress:open": "./node_modules/cypress/bin/cypress open",
    "release": "release-it",
    "release-major-beta": "release-it major --preRelease=beta",
    "release-beta": "release-it --preRelease=beta",
    "plone": "docker-compose -f docker-compose-just-plone.yml up",
    "upgrade-volto": "yarn upgrade @plone/volto --latest; cp node_modules/@plone/volto/yarn.lock yarn.lock; yarn install"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "api"
    ],
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@plone/volto).+\\.js$"
    ],
    "moduleNameMapper": {
      "@plone/volto/babel": "<rootDir>/node_modules/@plone/volto/babel",
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "load-volto-addons": "<rootDir>/node_modules/@plone/volto/jest-addons-loader.js",
      "@root/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "@package/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup-globals.js",
      "@plone/volto/test-setup-config.js"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    },
    "ignoreFiles": "theme/themes/default/**/*.overrides"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie 11",
    "not dead"
  ],
  "engines": {
    "node": "^12 || ^14 || ^16"
  },
  "resolutions": {
    "react-slick": "0.28.1",
    "**/@plone/scripts": "^2.0.0"
  },
  "dependencies": {
    "react-dates": "21.8.0",
    "@eeacms/volto-arcgis-block": "0.1.101",
    "@eeacms/volto-clms-theme": "1.0.174",
    "@eeacms/volto-eea-kitkat": "11.0.0",
    "@eeacms/volto-sentry-rancher-config": "3.0.1",
    "@plone/volto": "16.12.0",
    "express-list-routes": "1.1.3",
    "levenary": "1.1.1",
    "regenerator-runtime": "0.13.9"
  },
  "devDependencies": {
    "@plone/scripts": "*",
    "@eeacms/volto-widget-geolocation": "^3.0.0",
    "eslint-plugin-prettier": "3.1.3",
    "mrs-developer": "1.6.0",
    "prettier": "2.0.5",
    "react-svg": "14.0.4",
    "stylelint": "14.0.1",
    "postcss": "8.3.11",
    "jest-junit": "8.0.0",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  }
}
